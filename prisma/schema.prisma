// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("DATABASE_KEYS_URL")
}

model User {
  id          String  @id @default(uuid())
  name        String?
  email       String  @unique
  password    String
  cpf         String  @unique
  phoneNumber String

  address Address?
  key     Key?

  @@map("users")
}

model Address {
  id String @id @default(uuid())

  User   User   @relation(fields: [userId], references: [id])
  userId String @unique

  street       String?
  neighborhood String?
  state        String?
  city         String?
  country      String?

  @@map("address")
}

model Key {
  id     String @id @default(uuid())
  secret String @unique

  User   User   @relation(fields: [userId], references: [id])
  userId String @unique

  @@map("keys")
}
