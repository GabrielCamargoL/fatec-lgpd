// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String  @id @default(uuid())
  name        String?
  email       String  @unique
  password    String
  cpf         String  @unique
  phoneNumber String

  Purchases Purchase[]

  @@map("users")
}

model Product {
  id Int @id @default(autoincrement())

  purchase   Purchase? @relation(fields: [purchaseId], references: [id])
  purchaseId Int

  name        String
  description String
  price       Float
  quantity    Int
  category    String
}

model Purchase {
  id     Int    @id @default(autoincrement())
  user   User   @relation(fields: [userId], references: [id])
  userId String

  products Product[]

  totalAmount Float
  status      String
  createdAt   DateTime @default(now())
}
